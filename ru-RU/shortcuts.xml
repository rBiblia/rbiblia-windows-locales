<?xml version="1.0" encoding="UTF-8"?>
<shortcuts app="rBiblia">
    <window name="Глобальные">
        <key id="Ctrl+B">добавить стих в закладки</key>
        <key id="Ctrl+Shift+B">организовать закладки</key>
        <key id="Ctrl+N">добавить/изменить заметку</key>
        <key id="Ctrl+Shift+N">организовать заметки</key>
        <key id="Ctrl+C">копировать избранный стих в буфер обмена</key>
        <key id="Ctrl+F">открыть окно поиска</key>
        <key id="Ctrl+U">показать окно настроек программы</key>
        <key id="Ctrl+L">показать окно языковой версии программы</key>
        <key id="Ctrl+R">показать Репозиторий переводов</key>
        <key id="Ctrl+M">показать Мультибуфер обмена</key>
        <key id="Ctrl+J">перейти к определённому месту с помощью горячей клавиши</key>
        <key id="Ctrl+T">показать Словарь библейских терминов</key>
        <key id="Ctrl+1">развернуть открытые окна</key>
        <key id="Ctrl+2">разместить окна рядом вертикально</key>
        <key id="Ctrl+3">разместить окна рядом горизонтально</key>
        <key id="Ctrl+4">разместить окна каскадом</key>
        <key id="F1..F12">открыть окно с переводом</key>
        <key id="Ctrl+Tab">перейти к следующему окну</key>
        <key id="Tab">перейти к предыдущему окну</key>
    </window>
    <window name="В окне перевода">
        <key id="Up">предыдущий стих</key>
        <key id="Down">следующий стих</key>
        <key id="Left">предыдущий раздел</key>
        <key id="Right">следующий раздел</key>
        <key id="Ctrl+Left">предыдущая книга</key>
        <key id="Ctrl+Right">следующая книга</key>
        <key id="Ctrl+I">показать информацию о переводе</key>
        <key id="Ctrl+E">сообщить об ошибке в переводе</key>
        <key id="Ctrl+V">прочитать отмеченные стихи диктором</key>
        <key id="Ctrl+H">прочитать весь раздел диктором</key>
        <key id="Ctrl+S">завершить работу диктора</key>
        <key id="Ctrl+D">открыть случайный стих</key>
        <key id="Home">первый стих</key>
        <key id="End">последний стих</key>
        <key id="PageUp">перейти на 10 стихов назад</key>
        <key id="PageDown">перейти на 10 стихов вперёд</key>
        <key id="Enter">перейти к стиху в остальных переводах (двойной щелчок)</key>
        <key id="Tilde">переключить между навигатором и окном перевода</key>
        <key id="Alt+Left">перейти к предыдущему месту в истории</key>
        <key id="Alt+Right">перейти к следующему месту в истории</key>
    </window>
    <window name="В окне поиска">
        <key id="Enter">добавить выражение в список / начать поиск</key>
        <key id="Ctrl+Enter">начать поиск в расширенном режиме</key>
        <key id="Del">удалить выделенную фразу из списка</key>
        <key id="Ctrl+Del">удалить список фраз</key>
    </window>
    <window name="В результатах поиска">
        <key id="Ctrl+G">перейти к следующему стиху</key>
        <key id="Ctrl+Shift+G">перейти к предыдущему стиху</key>
        <key id="Ctrl+Shift+C">скопировать или сохранить результаты поиска</key>
    </window>
</shortcuts>
